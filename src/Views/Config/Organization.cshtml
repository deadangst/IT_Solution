@model src.Models.ApplicationUser
@{
    ViewData["Title"] = "Organización";
    Layout = "_LayoutAdminlteNoMenu";
}

<!-- Encabezado de Contenido (Encabezado de Página) -->
<!-- Contenido Principal -->
<section class="content">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="row">
        <div class="col-lg-9">
            <div class="box box-primary">
                <div class="box-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <table id="gridOrganization" name="gridOrganization" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-8">Organización</th>
                                        <th class="col-md-4"></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-3">
            <div class="row">
                <div class="col-md-12">
                    <a class="btn btn-success" style="margin-bottom:10px" onclick="ShowPopup('@Url.Action("AddEditOrganization","Config")')"><i class="fa fa-plus"></i> Agregar Nueva Organización</a>
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.contenido -->
<!--espacio para modal-->
<div class="modal modal-primary fade" id="modalDefault">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/views/config/index.js"></script>
}
