@model SetPasswordViewModel
@{
    ViewData["Title"] = "Establecer contraseña";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<h4>Establece tu contraseña</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<p class="text-info">
    No tienes un nombre de usuario/contraseña local para este sitio. Agrega una
    cuenta local para que puedas iniciar sesión sin un inicio de sesión externo.
</p>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Establecer contraseña</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
