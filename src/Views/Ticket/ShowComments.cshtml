@model src.Models.TicketThread
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Mostrar Datos</h4>
</div>
<div class="box-body">
    <div class="row">
        <div class="col-lg-12">
            <input type="hidden" asp-for="ticketId" />
            <table id="grid" name="grid" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="col-md-6">Comentarios</th>
                        <th class="col-md-3">Autor</th>
                        <th class="col-md-3">Hora</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<div class="box-footer">
    <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
</div>
<script src="~/js/views/ticket/detail.js"></script>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>
